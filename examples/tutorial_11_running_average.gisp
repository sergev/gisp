#!/usr/bin/env gisp

func runningAverage(samples) {
    var sum = 0.0
    var count = 0
    var totals = []
    var cursor = samples

    while !nullp(cursor) {
        sum = sum + car(cursor)
        count = count + 1
        totals = append(totals, [sum / count])
        cursor = cdr(cursor)
    }
    return totals
}

display(runningAverage([10.0, 12.0, 18.0, 20.0]))
newline()
