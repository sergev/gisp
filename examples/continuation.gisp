#!/usr/bin/env gisp

func demo() {
    display("Demonstrating call/cc\n")

    var saved = false
    var result = callcc(func(k) {
        saved = k
        return "initial return"
    })

    display("First result: ")
    display(result)
    newline()

    if stringp(result) {
        display("Invoking continuation with 42\n")
        saved(42)
    }

    display("Continuation produced: ")
    display(result)
    newline()
    return result
}

demo()
